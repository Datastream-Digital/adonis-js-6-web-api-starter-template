{
  "name": "@crm/{{ project_name }}",
  "version": "1.0.0",
  "private": true,
  "license": "UNLICENSED",
  "type": "module",
  "imports": {
    "#controllers/*": "./app/controllers/*.js",
    "#exceptions/*": "./app/exceptions/*.js",
    "#models/*": "./app/models/*.js",
    "#mails/*": "./app/mails/*.js",
    "#services/*": "./app/services/*.js",
    "#listeners/*": "./app/listeners/*.js",
    "#events/*": "./app/events/*.js",
    "#middleware/*": "./app/middleware/*.js",
    "#validators/*": "./app/validators/*.js",
    "#providers/*": "./providers/*.js",
    "#policies/*": "./app/policies/*.js",
    "#abilities/*": "./app/abilities/*.js",
    "#use-cases/*": "./app/use-cases/*.js",
    "#database/*": "./database/*.js",
    "#start/*": "./start/*.js",
    "#tests/*": "./tests/*.js",
    "#config/*": "./config/*.js",
    "#types/*": "./types/*.js"
  },
  "scripts": {
    "build": "node ace build",
    "dev": "node ace serve --hmr",
    "docker-compose-up:prod": "npm run typecheck && docker compose -f docker-compose.prod.yml build --no-cache && docker compose -f docker-compose.prod.yml up --build",
    "format": "prettier --write .",
    "lint": "eslint . --fix",
    "migration:fresh--seed": "node ace migration:fresh --seed",
    "start": "node bin/server.js",
    "test": "npm run test:vitest && npm run test:japa",
    "test:japa": "node ace test",
    "test:vitest": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "prettier": "@adonisjs/prettier-config",
  "resolutions": {
    "strtok3": "8.0.1"
  },
  "dependencies": {
    "@adonisjs/auth": "^9.2.3",
    "@adonisjs/core": "^6.12.1",
    "@adonisjs/cors": "^2.2.1",
    "@adonisjs/lucid": "^21.2.0",
    "@autotelic/pino-seq-transport": "^0.1.0",
    "@crm/common": "file:../../packages/common",
    "@crm/utilities": "file:../../packages/utilities",
    "@vinejs/vine": "^2.1.0",
    "adonis-autoswagger": "^3.63.0",
    "luxon": "^3.5.0",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.1",
    "@adonisjs/eslint-config": "^2.0.0-beta.7",
    "@adonisjs/prettier-config": "^1.4.0",
    "@adonisjs/tsconfig": "^1.4.0",
    "@japa/api-client": "^2.0.3",
    "@japa/assert": "^3.0.0",
    "@japa/file-system": "^2.3.0",
    "@japa/plugin-adonisjs": "^3.0.1",
    "@japa/runner": "^3.1.4",
    "@swc/core": "^1.7.22",
    "@testcontainers/postgresql": "^10.11.0",
    "@types/luxon": "^3.4.2",
    "@types/node": "^22.5.1",
    "eslint": "^9.9.1",
    "hot-hook": "^0.2.6",
    "nock": "^13.5.4",
    "pino-pretty": "^11.2.2",
    "prettier": "^3.3.3",
    "sinon": "^18.0.0",
    "testcontainers": "^10.13.1",
    "timekeeper": "^2.3.1",
    "ts-node-maintained": "^10.9.4",
    "typescript": "~5.5",
    "vitest": "^2.1.0"
  },
  "hotHook": {
    "boundaries": [
      "./app/controllers/**/*.ts",
      "./app/middleware/*.ts"
    ]
  },
  "overrides": {
    "strtok3": "8.0.1"
  },
  "pnpm": {
    "overrides": {
      "strtok3": "8.0.1"
    }
  }
}
